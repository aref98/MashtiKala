                                <div class="details2">
                                    <h4><%= product.title%></h4>
                                    <p style="  color: white;">&nbsp;&nbsp;&nbsp;<%= product.price%><span style="float: left;">تومان </span></p>
                                </div>
                                <div style="background-size: 100%;" class="buy2">  <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                                </div>
                            </div>
                            <div class="right2">
                                <div class="done2"><i class="material-icons">done</i></div>
                                <div class="details2">
                                    <h1><%= product.title%></h1>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="inside2">
                        <div class="icon2"><i class="material-icons">توضیحات</i></div>
                        <div style="font-size: 25px; color: white;" class="contents2">
