            <% for (let product of prods) { %>
                <div style="display: flex;position: relative;flex-direction: column;" class="wrapper2">
                    <div class="container2">
                        <img src="<%= product.imageUrl%>" style="display: flex;position: relative;flex-direction: column;" class="top2"><div class="bottom2">
